.lucky-draw {
    height: 100vh;
    width: 100vw;
    background-color: aquamarine;
}
.lucky-draw .xy-center{
    height:200px;
    width:100%;
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%,-50%);
}

.slide-image ,.slide-txt{
    width:100px;
    height: 100px;
    border-radius: 50%;
    border: 1px solid #ddd;
    position:absolute;
    left:50%;
    top: 50%;
    transform: translate(-50%,-50%);
}
.slide-txt{ 
    top: 113%;
    text-align: center;
    border: none;
}
.bottom-btn {
    position: absolute;
    bottom: 5px;
    left: 15px;
    right: 15px;

}